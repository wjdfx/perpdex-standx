# Only StandX is supported
EXCHANGE_TYPE=standx

# StandX Mainnet
BASE_URL=https://perps.standx.com
STANDX_WS_STREAM_URL=wss://perps.standx.com/ws-stream/v1

# StandX API token auth (required)
# Please generate according to official docs:
# https://docs.standx.com/standx-api/standx-api
STANDX_API_TOKEN=

# Request body signature key for trade endpoints (required)
# ed25519 private key, supports raw hex/base64/PEM
STANDX_REQUEST_SIGN_PRIVATE_KEY=
STANDX_REQUEST_SIGN_VERSION=v1
STANDX_HTTP_TIMEOUT_SEC=8

# Optional explicit precision controls (recommended for exchange rule mismatch)
STANDX_PRICE_TICK=0.1
STANDX_QTY_STEP=0.001

# Optional proxy
# PROXY_URL=http://127.0.0.1:7890

# Grid strategy
DIRECTION=LONG
GRID_COUNT=3
GRID_AMOUNT=0.01
GRID_SPREAD=0.05
MAX_TOTAL_ORDERS=10
MAX_POSITION=1.0
DECREASE_POSITION=0.35
ALER_POSITION=0.3
ATR_THRESHOLD=7

# Logs
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(filename)s:%(lineno)d - %(levelname)s - %(message)s
LOG_DIR=./logs

# Optional DingTalk notifications
DINGTALK_WEBHOOK=
DINGTALK_KEYWORD=Standx
